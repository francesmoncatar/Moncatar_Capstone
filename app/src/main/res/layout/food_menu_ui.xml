<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/material_dynamic_primary90">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/black"
            android:text="Enter your Address" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Craving Something?"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="100dp"
        android:layout_marginLeft="25dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Browse our Curated Selections of Restaurants and Specialty Dishes."
    android:layout_marginLeft="25dp"
    android:layout_marginRight="140dp"
    android:paddingTop="150dp"
    android:textStyle="bold"
    android:textSize="16dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/search_bar"
        android:background="@color/material_dynamic_neutral80"
        android:text="Search for Food or Restaurant..."
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_neutral_variant30"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="246dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cart_button"
        android:backgroundTint="@color/black"
        android:text="Cart"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="667dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>